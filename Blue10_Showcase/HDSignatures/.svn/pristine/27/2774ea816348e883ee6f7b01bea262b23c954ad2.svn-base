        /// <summary>
        /// Functie die alle Settings update bij het Opslaan
        /// </summary>
        private void UpdateSettings()
        {
            if (!string.IsNullOrEmpty(tbSeconds.Text))
            {
                if (!IsValid(tbSeconds.Text))
                {
                    MBox.ShowWarning("Minuten kan niet hoger dan 24 uur zijn! \n\r (1440 minuten)");
                    Settings.intSeconds = 1440;
                    tbSeconds.Text = "1440";
                }
                else
                    Settings.intSeconds = int.Parse(tbSeconds.Text);

            }
            else
            {
                btnStartTimer.IsEnabled = false;
                btnPauseTimer.IsEnabled = false;
                btnResetTimer.IsEnabled = false;
            }

            Settings.strAdminPath = tbBasisPath.Text;
            Settings.strFilePrefix = tbPrefix.Text;
            Settings.strOrigineleFile = tbBasisBestand.Text;
            Settings.strSignatureDirectoryName = tbSignatureDirectoryName.Text;
            Settings.strBasisNaam = tbBasisNaam.Text;
            Settings.blnUsersInLocal = (bool)cbLokaal.IsChecked;
            Settings.blnUsersInAD = (bool)cbDomain.IsChecked;
            Settings.blnCreateHtm = (bool)btnHtm.IsChecked;
            Settings.blnCreateRtf = (bool)btnRtf.IsChecked;
            Settings.blnCreateTxt = (bool)btnTxt.IsChecked;
            Settings.blnCreateFolderFiles = (bool)btnFiles.IsChecked;
            Settings.blnCreateFolderBestanden = (bool)btnBestanden.IsChecked;
            Settings.blnAdminOnly = (bool)btnAdminOnly.IsChecked;
            Settings.blnUserGetsAllSignatures = (bool)btnUserGetsAllSignatures.IsChecked;
            Settings.blnMakeSignatureDirectory = (bool)btnCreateSignatureDirectory.IsChecked;
            Settings.blnDeleteInactiveSignatures = (bool)btnDeleteInactiveSignature.IsChecked;
            Settings.blnDeleteAllSignatures = (bool)btnDeleteAllSignatures.IsChecked;
            Settings.blnCopySignatures = (bool)btnCopySignatures.IsChecked;
            Settings.strCopySignaturesToPath = tbCopyPath.Text;
            LogicManager.GetSchijfFromPath(tbBasisPath.Text);
            AutoSettings.SaveAllSettings();
            UpdateDataGrid();
        }

