        }

        /// <summary>
        /// Functie die Checkt bij het opstarten of er Settings gesaved zijn van de laatste keer dat er op Opslaan gedrukt is
        /// </summary>
        public void CheckSavedSettings()
        {
            AutoSettings.LoadSettingsOfType<Settings>();
            tbBasisPath.Text = Settings.strAdminPath;
            tbPrefix.Text = Settings.strFilePrefix;
            tbBasisBestand.Text = Settings.strOrigineleFile;
            tbSignatureDirectoryName.Text = Settings.strSignatureDirectoryName;
            if (string.IsNullOrEmpty(Settings.strBasisNaam))
            {
                cbLokaal.IsChecked = false;
                cbDomain.IsChecked = false;
            }
            else
            {
                tbBasisNaam.Text = Settings.strBasisNaam;
                cbLokaal.IsChecked = Settings.blnUsersInLocal;
                cbDomain.IsChecked = Settings.blnUsersInAD;
            }
            tbCopyPath.Text = Settings.strCopySignaturesToPath;
            btnHtm.IsChecked = Settings.blnCreateHtm;
            btnRtf.IsChecked = Settings.blnCreateRtf;
            btnTxt.IsChecked = Settings.blnCreateTxt;
            btnFiles.IsChecked = Settings.blnCreateFolderFiles;
            btnBestanden.IsChecked = Settings.blnCreateFolderBestanden;
            btnAdminOnly.IsChecked = Settings.blnAdminOnly;
            btnUserGetsAllSignatures.IsChecked = Settings.blnUserGetsAllSignatures;
            btnCreateSignatureDirectory.IsChecked = Settings.blnMakeSignatureDirectory;
            btnDeleteInactiveSignature.IsChecked = Settings.blnDeleteInactiveSignatures;
            btnDeleteAllSignatures.IsChecked = Settings.blnDeleteAllSignatures;
            btnCopySignatures.IsChecked = Settings.blnCopySignatures;
            tbSeconds.Text = Settings.intSeconds.ToString();
            if (!string.IsNullOrEmpty(tbBasisPath.Text))
                if (Directory.Exists(tbBasisPath.Text))
                    btnStart.IsEnabled = true;
        }

