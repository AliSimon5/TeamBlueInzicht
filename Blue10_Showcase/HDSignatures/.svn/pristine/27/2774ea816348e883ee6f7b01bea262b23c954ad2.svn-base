            btnUsersOphalen_Click(null, null);
            btnStart.IsEnabled = true;
            btnOpslaan.IsEnabled = false;
            if (!string.IsNullOrEmpty(tbBasisPath.Text))
            {
                if (!Directory.Exists(tbBasisPath.Text))
                {
                    // Log Pad niet kunnen vinden
