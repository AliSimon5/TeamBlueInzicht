namespace HDTelefoonKosten.Windows
{
    /// <summary>
    /// Interaction logic for MargeManagerWindow.xaml
    /// </summary>
    public partial class MargeManagerWindow : Window
    {
        private int intMarge = 0;
        private CompanyType SelectedCompany;
        ListBoxControl<CompanyType> _lbCompanies;
        public MargeManagerWindow()
        {
            InitializeComponent();

            _lbCompanies = new ListBoxControl<CompanyType>(lbAllCompanies);
        }
        private static readonly Regex _regex = new Regex("[^0-9]+"); //regex that matches disallowed text
        private static bool IsTextAllowed(string text)
        {
            return !_regex.IsMatch(text);
        }

        private void tbPermanentMarge_PreviewTextInput(object sender, TextCompositionEventArgs e)
        {
            if (!IsTextAllowed(e.Text))
            {
                e.Handled = true;
            }
        }

        private void btnSetMargeForCompany_Click(object sender, RoutedEventArgs e)
        {
            if (string.IsNullOrEmpty(tbPermanentMarge.Text))
            {
                SelectedCompany = _lbCompanies.GetSelection();
                intMarge = 0;
                SetMargeForCompany();
            }
            else
            {
                SelectedCompany = _lbCompanies.GetSelection();
                intMarge = int.Parse(tbPermanentMarge.Text);
                SetMargeForCompany();
            }
        }
        private void SetMargeForCompany()
        {
            var startupPath = Path.GetDirectoryName(Process.GetCurrentProcess().MainModule.FileName);
            var tempBackupPath = Path.Combine(startupPath, "HDSignatures.SavedCompanyData.txt");
            if (!File.Exists(tempBackupPath))
                return;
        }
    }
}
