<Window x:Class="HDTelefoonKosten.Windows.MargeManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HDTelefoonKosten.Windows"
        mc:Ignorable="d"
        Title="Bedrijf instellingen" Height="542" Width="834" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="lbAllCompanies" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="272,66,0,17" SelectionMode="Multiple" HorizontalAlignment="Left" Width="342"/>
        <Button x:Name="btnSetMargeForCompany" Content="Zet Marge" Margin="645,95,0,0" Click="btnSetMargeForCompany_Click" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="158"/>
        <TextBox x:Name="tbPermanentMarge" Margin="665,68,0,0" TextWrapping="Wrap" PreviewTextInput="tbPermanentMarge_PreviewTextInput" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="119"/>
        <Label Content="%" Margin="784,64,0,0" RenderTransformOrigin="0.053,-0.14" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="20"/>
        <Button x:Name="btnDeleteAllCompanyMarges" Content="Leeg Lijst" Margin="645,0,0,17" Click="btnDeleteAllCompanyMarges_Click" Height="32" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="158"/>
        <Button x:Name="btnSetVoorschot" Content="Zet Voorschot" Margin="645,167,0,0" Height="31" VerticalAlignment="Top" Click="btnSetVoorschot_Click" HorizontalAlignment="Left" Width="158"/>
        <TextBox x:Name="tbVoorschot" Margin="665,140,0,0" TextWrapping="Wrap" Height="18" VerticalAlignment="Top" PreviewTextInput="tbPermanentMarge_PreviewTextInput" HorizontalAlignment="Left" Width="138"/>
        <Label Content="€" Margin="641,136,0,0" RenderTransformOrigin="0.053,-0.14" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="20"/>
        <ListBox x:Name="lbAllCompanyIds" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="19,66,0,17" SelectionChanged="lbAllCompanyIds_SelectionChanged" HorizontalAlignment="Left" Width="246"/>
        <Button x:Name="btnSetCompanyId" Content="     Koppel ID aan &#xD;&#xA;     geselecteerde bedrijven" Margin="645,245,0,0" Height="40" VerticalAlignment="Top" Click="btnSetCompanyId_Click" HorizontalAlignment="Left" Width="159"/>
        <TextBox x:Name="tbCompanyId" Margin="665,217,0,0" TextWrapping="Wrap" PreviewTextInput="tbPermanentMarge_PreviewTextInput" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="138"/>
        <Button x:Name="btnLinkCompaniesToId" Content="Koppel bedrijven aan&#xD;&#xA;geselecteerde ID" Margin="645,295,0,0" VerticalAlignment="Top" Height="44" HorizontalAlignment="Left" Width="159" Click="btnLinkCompaniesToId_Click"/>
        <Label Content="ID" Margin="638,213,0,0" RenderTransformOrigin="0.053,-0.14" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="26"/>
        <CheckBox x:Name="cbShowOnlyCompaniesOfId" Content="Laat aleen bedrijven zien van ID" Margin="275,43,344,0" VerticalAlignment="Top" Click="cbShowOnlyCompaniesOfId_Click"/>
        <Button x:Name="btnDeleteCompanyOfId" Content="Verwijder bedrijf van ID" Margin="645,348,0,0" VerticalAlignment="Top" Height="29" Click="btnDeleteCompanyOfId_Click" HorizontalAlignment="Left" Width="159"/>
        <Label Content="Bedrijf instellingen" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="244" FontFamily="Segoe UI Semibold" FontSize="16"/>

    </Grid>
</Window>
