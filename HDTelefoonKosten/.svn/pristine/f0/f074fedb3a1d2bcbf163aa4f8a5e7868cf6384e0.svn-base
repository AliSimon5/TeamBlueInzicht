<Window x:Class="HDTelefoonKosten.Windows.MargeManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HDTelefoonKosten.Windows"
        mc:Ignorable="d"
        Title="MargeManagerWindow" Height="345" Width="495" WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="lbAllCompanies" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,10,143,10"/>
        <Button x:Name="btnSetMargeForCompany" Content="Zet Marge" Margin="0,59,19,0" Click="btnSetMargeForCompany_Click" Height="31" VerticalAlignment="Top" HorizontalAlignment="Right" Width="109"/>
        <TextBox x:Name="tbPermanentMarge" Margin="0,33,70,0" TextWrapping="Wrap" PreviewTextInput="tbPermanentMarge_PreviewTextInput" Height="18" VerticalAlignment="Top" HorizontalAlignment="Right" Width="58"/>
        <Label Content="%" Margin="0,28,52,0" RenderTransformOrigin="0.053,-0.14" HorizontalAlignment="Right" Width="20" Height="26" VerticalAlignment="Top"/>
        <Button x:Name="btnDeleteAllCompanyMarges" Content="Leeg Lijst" Margin="0,168,19,0" Click="btnDeleteAllCompanyMarges_Click" Height="32" VerticalAlignment="Top" HorizontalAlignment="Right" Width="109"/>
        <Button x:Name="btnSetVoorschot" Content="Zet Voorschot" Margin="0,125,19,0" Height="31" VerticalAlignment="Top" Click="btnSetVoorschot_Click" HorizontalAlignment="Right" Width="109"/>
        <TextBox x:Name="tbVoorschot" Margin="0,99,41,0" TextWrapping="Wrap" Height="18" VerticalAlignment="Top" PreviewTextInput="tbPermanentMarge_PreviewTextInput" HorizontalAlignment="Right" Width="76"/>
        <Label Content="€" Margin="0,94,112,0" RenderTransformOrigin="0.053,-0.14" Height="26" VerticalAlignment="Top" HorizontalAlignment="Right" Width="20"/>

    </Grid>
</Window>
